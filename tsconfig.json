{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@client": ["src/whatsapp/types/command.ts"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
